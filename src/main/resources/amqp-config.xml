<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="connect_factory" class="com.rabbitmq.client.ConnectionFactory">
        <property name="host" value=""/>
        <property name="username" value="guest"/>
        <property name="password" value="guest"/>
    </bean>

    <bean id="amqp_dispatch" class="com.uuweaver.ucore.amqp.dispatcher.AMQPDispatcher" init-method="InitConfig"
            destroy-method="CleanConfig">
        <property name="connectionFactory" ref="connect_factory"/>
        <property name="concurrentThread" value="20"/>
        <property name="packageList">
            <list>
            </list>
        </property>
        <property name="dispatchExchangeList">
            <list>
                <!--IAM Service-->
                <bean class="com.uuweaver.ucore.amqp.interfaces.DispatchExchange">
                    <constructor-arg name="name" value="iam_exchange"/>
                    <constructor-arg name="durable" type="boolean" value="true"/>
                    <constructor-arg name="autoDelete" type="boolean" value="false"/>
                    <property name="routeKey" value="iam.*"/>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="amqp_publisher" class="com.uuweaver.ucore.amqp.publisher.MessagePublisher" init-method="InitConfig"
          destroy-method="CleanConfig">
        <property name="connectionFactory" ref="connect_factory"/>
        <property name="concurrentThread" value="20"/>
    </bean>


</beans>